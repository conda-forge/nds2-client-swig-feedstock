+        LINK_FLAGS "-undefined dynamic_lookup"
+    )
+  else ( )
+    swig_link_libraries( ${target_name} ${${ARG_PREFIX}_LIBRARIES} ${ARG_LINK_LIBRARIES} )
   endif( )
-  # cm_msg_debug_variable(${ARG_PREFIX}_LIBRARIES)
